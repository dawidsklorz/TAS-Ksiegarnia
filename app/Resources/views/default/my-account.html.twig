{% extends 'base.html.twig' %}

{% block body %}

{% include 'default/header.html.twig' %}

    <div id="main">
    	<div class="container">
    		<div class="row">
    			<div class="col-md-6">
    				<div class="panel panel-default">
              <h2>Moje dane:</h2>
						  <ul>
                {% for u in user %}
                <img src="../uploads/avatars/{{u.avatar}}" alt="" width="200" height="200" />
						    <li>Imię: {{u.name}}</li>
                <li>Nazwisko: {{u.surname}}</li>
                <li>E-mail: {{u.email}}</li>
                <li>Ulica i nr mieszkania: {{u.address}}</li>
                <li>Miasto: {{u.city}}</li>
                <li>Kod pocztowy: {{u.postalCode}}</li>
                {% endfor %}
						  </ul>
    				</div>
    			</div>
          <div class="col-md-6">
    				<div class="panel panel-default">
						  <h2>Moje zamowienia:</h2>
              {% if orders is empty %}
                <p>Brak zamówień.</p>
              {% else %}
              <ul>
                {% for o in orders %}
						    <li>Id zamowienia: {{o.id}}</li>
                {% endfor %}
              </ul>
              {% endif %}
    				</div>
    			</div>
    		</div>
    	</div>
    </div>

{% endblock %}
