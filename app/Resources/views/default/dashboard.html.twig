{% extends 'base.html.twig' %}

{% block body %}

{% include 'default/header.html.twig' %}

    <div id="main">
    	<div class="container">
        <div class="row">
          <div class="col-md-12">
            <form class="" action="index.html" method="post">
                <div class="form-group">
                  <input type="text" name="search" class="form-control" value="" placeholder="Szukaj...">
                </div>
              <!-- <input type="submit" name="name" value=""> -->
            </form>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class="panel panel-default">
              <ul>
                {% for category in categories %}
                <li><a href="/categories/{{category.id}}">{{category.title|e}}</a></li>
                {% endfor %}
              </ul>
            </div>
          </div>
          <div class="col-md-9">
            {% if name is defined and name is not empty %}
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <div> Witaj, <strong>{{name}}</strong></div>
                  <a href="/logout" class="btn btn-default"><i class="fa fa-sign-out"></i> Wyloguj</a>
                </div>
              </div>
            </div>
            {% endif %}
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <h2>Bestsellery:</h2>
                  <ul>
                    {% for bestseller in bestsellers %}
                      <li>
                        <a href="books/{{bestseller.id}}">
                          {{ bestseller.title|e }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="panel panel-default">
                  <h2>Nowosci:</h2>
                  <ul>
                    {% for novelty in novelties %}
                      <li>
                        <a href="books/{{novelty.id}}">
                          {{ novelty.title|e }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
    	</div>
    </div>

    {% include 'default/footer.html.twig' %}

{% endblock %}
