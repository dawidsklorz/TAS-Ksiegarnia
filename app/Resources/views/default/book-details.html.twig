{% extends 'base.html.twig' %}

{% block body %}

{% include 'default/header.html.twig' %}

    <div id="main">
    	<div class="container">
    		<div class="row">
          {% include 'default/sidebar.html.twig' %}
    			<div class="col-md-9">
    				<div class="panel panel-default">
						  <ul>
                {% for b in books %}
                  <div class="book-cover-box">
                    <img src="../uploads/covers/{{b.cover}}" class="img-responsive" alt="" />
                  </div>
  						    <li>Tytuł: {{b.title}}</li>
                  <li>Autor: {{b.author}}</li>
                  <li>Opis: {{b.description}}</li>
                  <li>Kategoria: {{b.category}}</li>
                  <li>Wydawnictwo: {{b.publisher}}</li>
                  <li>Rok wydania: {{b.date}}</li>
                  {% if b.isDiscount == true %}
                    <li>Cena: <span class="old-price">{{b.discountPrice}}</span> {{b.price}} zł</li>
                  {% else %}
                    <li>Cena: {{b.price}} zł</li>
                  {% endif %}
                  {% if b.isBestseller == true %}
                    <li><strong>Bestseller</strong></li>
                  {% endif %}
                  {% if b.isNew == true %}
                    <li><strong>Nowość</strong></li>
                  {% endif %}
                  <a href="/add-to-cart?id={{b.id}}" class="btn btn-default"><i class="fa fa-shopping-cart"></i> Dodaj do koszyka</a>
                {% endfor %}
						  </ul>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>

{% endblock %}
