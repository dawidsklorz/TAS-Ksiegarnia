{% extends 'base.html.twig' %}

{% block body %}

{% include 'default/header.html.twig' %}

    <div id="main">
    	<div class="container">
    		<div class="row">
    			<div class="col-md-12">
    				<div class="panel panel-default">
              <h2>Aktualnie w koszyku:</h2>
              <span>Ilość przedmiotow w koszyku: {{cart|length}}</span>
              <div class="row">
                {% for books in cart %}
                  <div class="col-md-3">
                    {% for b in books %}
                    <ul>
                      <li>Tytuł: {{b.title}}</li>
                      <li>Autor: {{b.author}}</li>
                      <li>Cena: {{b.price}}</li>
                    </ul>
                    <a href="/remove-from-cart?id={{b.id}}"><i class="fa fa-trash"></i> Usuń z koszyka</a>
                    {% endfor %}
                  </div>
                {% endfor %}
              </div>
              <div class="row">
                <div class="col-md-12">
                  <a href="/order"><i class="fa fa-shopping-cart"></i> Złoz zamowienie</a>
                </div>
              </div>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>

{% endblock %}
