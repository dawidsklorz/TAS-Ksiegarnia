{% extends 'base.html.twig' %}

{% block body %}

{% include 'default/header.html.twig' %}

    <div id="main">
    	<div class="container">
    		<div class="row">
    			<div class="col-md-12">
    				<div class="panel panel-default">
              <h2>Aktualnie w koszyku:</h2>
              <span>Ilość przedmiotow w koszyku: {{cart|length}}</span>
              <div class="row">
                {% for book in cart %}
                  <div class="col-md-3">
                    <ul>
                      <li>Tytuł: {{book.title}}</li>
                      <li>Autor: {{book.author}}</li>
                      <li>Cena: {{book.price}} zł</li>
                    </ul>
                    <a href="/remove-from-cart?id={{book.id}}" class="btn btn-default"><i class="fa fa-trash"></i> Usuń z koszyka</a>
                  </div>
                {% endfor %}
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="panel-footer ">
                    <a href="/order" class="btn btn-default"><i class="fa fa-shopping-cart"></i> Złóż zamówienie</a>
                  </div>
                </div>
              </div>
    				</div>
    			</div>
    		</div>
    	</div>
    </div>

{% endblock %}
